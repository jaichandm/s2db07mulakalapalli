extends layout
block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let carid = toShow._id
    - let carbrand = toShow.car_brand
    - let carcost = toShow.car_cost
    - let carcolor = toShow.car_color
    div
      div.row
        div(class='carAttr mr-3') Car ID is:
        div #{carid}
      div.row
        div(class='carAttr mr-3') Car Brand is:
        div #{carbrand}
      div.row
        div(class='carAttr mr-3') Car Color is:
        div #{carcolor}
      div.row
        div(class='carAttr mr-3') Car Cost is:
        div #{carcost}
      br
      h3() Quick access links to view or make changes
      br
      button(class="btn btn-danger m-2" onclick=`window.open('/cars/delete/?id=${carid}', '_blank')`) Delete Item
      button(class="btn btn-warning m-2" onclick=`window.open('/cars/update/?id=${carid}', '_blank')`) Update Item
      button(class="btn btn-success m-2" onclick="window.open('/cars/create', '_blank');") Create new Item
      button(class="btn btn-info m-2" onclick="window.open('/cars', '_blank');") Home Page